{
  "name": "labs",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "npm run knip && vite build",
    "build:analyze": "ANALYZE=true vite build",
    "lint": "eslint . && npm run knip -- --no-exit-code",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest",
    "test:changed": "git diff --name-only HEAD~1 -- '*.ts' '*.tsx' '*.js' '*.jsx' '*.json' | head -1 > /dev/null && npm test || echo 'No TypeScript/JavaScript files changed, skipping tests'",
    "preview": "vite preview",
    "deploy": "npm test && npm run build && gh-pages -d dist",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run knip -- --no-exit-code'"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@likemybread/name-generator": "^1.0.1",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "lamejsfixbug121": "^1.0.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "three": "^0.182.0",
    "three-bvh-csg": "^0.0.17",
    "vexflow": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "knip": "^5.62.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.17",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-compression2": "^2.2.0",
    "vite-plugin-pwa": "^1.0.1",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "^3.2.4"
  }
}
